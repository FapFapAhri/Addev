{% extends 'base.html.twig' %}

{% block body %}

<body class="color">

<div class="intro py-4 py-lg-8 position-relative text-white">
    <div class="bg-overlay-primary">
        <img src="{{ asset('images/bleu.jpg') }}" class="img-fluid img-cover" alt="Robust UI Kit" style="width: 100%; display: block;" >
    </div>
    <div class="intro-content py-6 text-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-6 mx-auto text-center">
                    <h1 class="my-3 display-4 d-none d-lg-inline-block">Inscription</h1>
                </div>
            </div>
        </div>
    </div>
</div>
 <!-- slogan -->
 <div class="jumbotron">
        <!-- <div class="container">
            <h2></h2>
         </div> -->
    </div>

   
<div class="container">



   {# si success n'est pas deffinit #}
    {% if success is not defined %}
    
    {# formulaire #}
    <form action="{{ path('register') }}" method="POST">
            <div class="form-row offset-2">
              <div class="col-md-4 mb-3">
                <label for="validationDefault01"></label>
                <input type="text"  name="firstname" class="form-control" id="validationDefault01" placeholder="Prenom"  required>
              </div>
              <div class="col-md-4 mb-3">
                <label for="validationDefault02"></label>
                <input type="text" class="form-control" id="validationDefault02" placeholder="Nom"  name="name"  required>
              </div>
              <div class="col-md-4 mb-3">
                <label for="validationDefaultUsername"></label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupPrepend2">@</span>
                  </div>
                  <input type="text" class="form-control" id="validationDefaultUsername"  name="email" placeholder="Email" aria-describedby="inputGroupPrepend2" required>
                </div>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-6 mb-3">

                    <label for="exampleInputPassword1"></label>
                    <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="Mot de passe" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="exampleInputPassword1"></label>
                    <input type="password" class="form-control" id="exampleInputPassword1" name="confirm_password" placeholder="Confirmation" required>
                </div>    

                <!-- <label for="validationDefault03"></label>
                <input type="pasword" class="form-control" id="validationDefault03" name="password" placeholder="Mot de passe" required>
              </div>
              <div class="col-md-6 mb-3">
                    <label for="validationDefault03"></label>
                    <input type="password" class="form-control" id="validationDefault03"  name="confirm_password" placeholder="Confirmation" required>
                </div> -->

            </div>
           
        
          <div class="g-recaptcha" data-sitekey="{{google_token}}"></div>

          <button class="btn btn-lg btn-primary btn-block" type="submit">S'inscrire</button>
        </form>


    </div>
    
    {% endif %}
    {# message d'erreur #}
    {% if errors is defined %}
    
        {% for error in errors %}
            <div class="alert alert-danger" role="alert">
                {{ error }}
            </div>
            
        {% endfor %}

    {% endif %}
    
    {# message de succes #}
    {% if success is defined %}
    <div class="alert alert-success" role="alert">
            {{ success }}
        </div>
    {% endif %}


    <script src='https://www.google.com/recaptcha/api.js'></script>
</body>
{% endblock %}


