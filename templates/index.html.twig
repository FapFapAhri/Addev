<!-- trois boxes avec les dernieres annonces -->

<div class="album py-5 bg-light">
	<div class="container">
	<h4>Les dernières annonces:</h4>
	

	<div class="row">
{% for advert in lastThreeAd %}

			<div class="col-md-4">
				<div class="card mb-4 box-shadow">
					<img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [100%x225]" style="height: 225px; width: 100%; display: block;" src="images/Technologie.jpg" data-holder-rendered="true">
					<div class="card-body">
							<p class="card-text">Titre: {{advert.title}}</p>
							<p class="card-text" id="height-max">Description: {{advert.content}}</p>
						<div class="d-flex justify-content-between align-items-center">
							<div class="btn-group">
								<a href="{{ path('advert', { id : advert.id }) }}"  class="btn btn-sm btn-outline-secondary">Voir l'annonce</a>
								{# <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> #}
							</div>
							<small class="text-muted">{{ advert.postDate|diff('%h:%i:%S %d-%m-%Y') }}</small>
						</div>
					</div>
				</div>
			</div>
			
			{% endfor %}
		</div>






</body>

